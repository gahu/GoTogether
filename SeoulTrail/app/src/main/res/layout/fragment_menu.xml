    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_guide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@drawable/icon01_guide"
                android:text="도우미"
                android:textColor="#5d897d"
                android:textSize="20sp"
                android:visibility="visible"
                android:singleLine="true"

                />

            <Button
                android:id="@+id/btn_history"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/icon02_history"
                android:text="둘레길이란?"
                android:textColor="#5d897d"
                android:textSize="20sp"
                android:singleLine="true"
                />

            <Button
                android:id="@+id/btn_video"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/icon03_video"
                android:text="영상"
                android:textColor="#5d897d"
                android:textSize="20sp"
                android:singleLine="true"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_stamp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/icon04_stamp"
                android:text="스탬프"
                android:textColor="#5d897d"
                android:textSize="20sp"
                android:singleLine="true"/>

            <Button
                android:id="@+id/btn_cafe"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/icon05_cafe"
                android:text="카페"
                android:textColor="#5d897d"
                android:textSize="20sp"
                android:singleLine="true"/>

            <Button
                android:id="@+id/btn_weather"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/icon06_weather"
                android:singleLine="true"

                android:text="날씨"
                android:textColor="#5d897d"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_event"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/icon07_event"
                android:text="행사"
                android:textColor="#5d897d"
                android:textSize="20sp"
                android:singleLine="true"/>

            <Button
                android:id="@+id/btn_faq"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/icon08_faq"
                android:text="문의"
                android:textColor="#5d897d"
                android:textSize="20sp"
                android:singleLine="true"/>

            <Button
                android:id="@+id/btn_etc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/icon09_etc"
                android:text="기타"
                android:textColor="#5d897d"
                android:textSize="20sp"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
