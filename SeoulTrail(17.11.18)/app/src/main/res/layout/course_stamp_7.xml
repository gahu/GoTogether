<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/stamp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/stamp20_on"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_check" />

            <TextView
                android:id="@+id/stamp_20_count"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:maxLines="1"
                android:ellipsize="end"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/stamp_21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/stamp21_on"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_check" />

            <TextView
                android:id="@+id/stamp_21_count"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:maxLines="1"
                android:ellipsize="end"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/stamp_22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/stamp22_on"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_check" />

            <TextView
                android:id="@+id/stamp_22_count"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:maxLines="1"
                android:ellipsize="end"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>