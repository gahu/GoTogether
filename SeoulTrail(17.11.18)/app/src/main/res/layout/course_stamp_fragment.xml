<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="45"
        android:background="@drawable/bg_stamp_list">

        <ListView
            android:id="@+id/course_stamp_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:divider="@null"
            android:paddingRight="6dp"
            android:scrollbars="none" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/stamp_scrollview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="55"
        android:background="@drawable/bg_stamp_right"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/course_stamp_1"
                layout="@layout/course_stamp_1"
                android:visibility="gone" />

            <include
                android:id="@+id/course_stamp_2"
                layout="@layout/course_stamp_2"
                android:visibility="gone" />

            <include
                android:id="@+id/course_stamp_3"
                layout="@layout/course_stamp_3"
                android:visibility="gone" />

            <include
                android:id="@+id/course_stamp_4"
                layout="@layout/course_stamp_4"
                android:visibility="gone" />

            <include
                android:id="@+id/course_stamp_5"
                layout="@layout/course_stamp_5"
                android:visibility="gone" />

            <include
                android:id="@+id/course_stamp_6"
                layout="@layout/course_stamp_6"
                android:visibility="gone" />

            <include
                android:id="@+id/course_stamp_7"
                layout="@layout/course_stamp_7"
                android:visibility="gone" />

            <include
                android:id="@+id/course_stamp_8"
                layout="@layout/course_stamp_8"
                android:visibility="gone" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>